<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="beanPostProcessor" class="com.tan.springbean.MyBeanPostProcessor"></bean>

    <bean id="instantiationAwareBeanPostProcessor" class="com.tan.springbean.MyInstantiationAwareBeanPostProcessorAdapter"></bean>

    <bean id="beanFactoryPostProcessor" class="com.tan.springbean.MyBeanFactoryPostProcessor"></bean>

    <bean id="person" class="com.tan.springbean.Person" init-method="myInit"
          destroy-method="myDestroy" scope="singleton" p:name="张三" p:address="广州"
          p:phone="15900000000" />
</beans>